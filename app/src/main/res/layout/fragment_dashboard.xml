<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.polybiastudios.photosweep.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.polybiastudios.photosweep.view.TintedImageButtonGrn
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:id="@+id/gallery_button"
        android:src="@drawable/ic_collections_white_48dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_photo"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/ps_grey" />

    <com.polybiastudios.photosweep.view.TintedImageButtonGrn
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:id="@+id/camera_button"
        android:src="@drawable/ic_photo_camera_white_48dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_photo"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/ps_grey" />
</LinearLayout>
